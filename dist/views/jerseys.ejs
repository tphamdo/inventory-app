<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Jersey Inventory</title>
  <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
  <%- include('partials/header') %>
  <%- include('partials/nav') %>
  <div class="content-container">
    <div>
      <h2><%= title %></h2>
      <table class="jerseys-table">
        <thead>
          <tr>
            <th>Player Name</th>
            <th>Team</th>
            <th class="quantity align-right">Qty</th>
            <th class="price align-right">Price</th>
            <th></th>
          </tr>
        </thead>
        <% jerseys.map((jersey) => { %>
          <tr>
            <td><%= jersey.player_name %></td>
            <td><a href="/teams/<%=jersey.team_name%>/jerseys"><%= jersey.team_name %></a></td>
            <td class="quantity align-right"><%= jersey.quantity %></td>
            <td class="price align-right"><%= jersey.price %></td>
            <td class="">
              <div class="buttons-div">
                <form action="/jerseys/<%=jersey.id%>/edit">
                  <button type="submit">
                    <%- include('partials/edit-icon') %>
                  </button>
                </form>
                <form id="delete-form" method="POST" action="<% if (locals.team) { %> /teams/<%=team%>/jerseys/<%=jersey.id%>/delete <% } else { %> /jerseys/<%=jersey.id%>/delete<% } %>">
                  <button type="submit" onclick="return confirm('Are your sure you want to delete <%= jersey.player_name %>?');">
                    <%- include('partials/trash-icon') %>
                  </button>
                </form>
              </div>
            </td>
          </tr>
          <% }); %>
      </table>
      <% if (locals.team) { %>
        <div class="newJerseyButton"><a href="/teams/<%=team%>/jerseys/new">New Jersey</a></div>
      <% } else { %>
        <div class="newJerseyButton"><a href="/jerseys/new">New Jersey</a></div>
      <% } %>
    </div>
  </div>
</body>
</html>
