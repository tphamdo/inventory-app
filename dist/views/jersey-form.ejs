<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Jersey Inventory</title>
  <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
  <%- include('partials/header') %>
  <%- include('partials/nav') %>
  <div class="content-container">
    <div>
      <form method="POST" class="jersey-form">
        <h2 class="title"><%= title %></h2>
        <input type="text" id="name" name="name" placeholder="Player Name" <% if (locals.player_name) { %> value="<%= player_name %>" <% } %> required>
        <% if (locals.team_name && locals.team_readOnly) { %>
          <input type="text" id="team" name="team" value="<%= team_name %>" readonly>
        <% } else { %>
          <input type="text" id="team" name="team" list="teams" placeholder="Team" <% if (locals.team_name) { %> value="<%= team_name %>" <% } %> required>
          <% if (locals.teams) { %>
            <datalist id="teams">
              <% teams.map((team) => { %>
                <option value="<%= team.name %>"><%= team.name %></option>
              <% }); %>
            </datalist>
          <% } %>
        <% } %>
        <input type="number" id="price" name="price" step="0.01" placeholder="Price" <% if (locals.price) { %> value="<%= price %>" <% } %> required>
        <input type="text" id="quantity" name="quantity" placeholder="Quantity" <% if (locals.quantity) { %> value="<%= quantity %>" <% } %>>
        <input type="submit" value="Submit">
      </form>
    </div>
  </div>
</body>
</html>
